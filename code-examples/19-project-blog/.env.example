APP_NAME="Blog Application"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=blog_db
DB_USERNAME=root
DB_PASSWORD=

# Storage settings
FILESYSTEM_DISK=public

# Jangan lupa:
# 1. Copy file ini ke .env
# 2. Buat database: CREATE DATABASE blog_db;
# 3. Run: php artisan key:generate
# 4. Install Breeze: composer require laravel/breeze --dev
# 5. Run: php artisan breeze:install blade
# 6. Run: npm install && npm run dev
# 7. Run: php artisan migrate
# 8. Run: php artisan storage:link
# 9. Seed data:
#    - php artisan db:seed --class=CategorySeeder
#    - php artisan db:seed --class=TagSeeder
#    - php artisan db:seed --class=PostSeeder (optional - requires user account)
